procedure mergeSort(array)
    if length of array > 1 then
        mid ← length of array / 2
        leftHalf ← array[0 ... mid-1]
        rightHalf ← array[mid ... end]

        mergeSort(leftHalf)
        mergeSort(rightHalf)

        merge(leftHalf, rightHalf, array)

procedure merge(left, right, array)
    i ← 0     // index for left
    j ← 0     // index for right
    k ← 0     // index for array

    while i < length of left and j < length of right do
        if left[i] < right[j] then
            array[k] ← left[i]
            i ← i + 1
        else
            array[k] ← right[j]
            j ← j + 1
        k ← k + 1

    // Copy remaining elements, if any
    while i < length of left do
        array[k] ← left[i]
        i ← i + 1
        k ← k + 1

    while j < length of right do
        array[k] ← right[j]
        j ← j + 1
        k ← k + 1